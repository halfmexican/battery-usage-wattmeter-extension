<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.battery_usage_wattmeter"
        path="/org/gnome/shell/extensions/battery_usage_wattmeter/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key type="i" name="battery">
      <default>0</default>
      <summary></summary>
      <description></description>
  </key>
    <key type="s" name="custom-battery-path">
      <default>""</default>
      <summary>File Path of battery</summary>
  </key>
    <key type="i" name="interval">
      <default>4</default>
      <summary></summary>
      <description></description>
  </key>
  <key type="b" name="use-custom">
    <default>false</default>
    <summary>Use custom battery path</summary>
  </key>
  <key name="hide-na" type="b">
    <default>true</default>
    <summary>Hide N/A status</summary>
    <description>If true, hide the N/A status when the battery status is neither charging nor discharging.</description>
  </key>
  </schema>
</schemalist>
